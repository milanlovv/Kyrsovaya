                <Label Margin="30 0 0 0" VerticalAlignment="Center" Content="Корзина" Name="ToBasket" Style="{StaticResource ResourceKey=labelHeader}" MouseUp="Label_MouseUpGoToBasket"></Label>
                <Label Margin="30 0 0 0" VerticalAlignment="Center" Content="Мои Услуги" Name="ToOrders" Style="{StaticResource ResourceKey=labelHeader}"></Label>
                <Label Margin="30 0 0 0" VerticalAlignment="Center" Content="Личный кабинет" Name = "ToProfile" Style="{StaticResource ResourceKey=labelHeader}" MouseUp="Label_MouseUpGoToProfile"></Label>
            </StackPanel>
            <Line></Line>
            <Label Content="Ваши услуги" Margin="175 20 175 0" FontSize="64"></Label>
                <ScrollViewer Height="825" Margin="175,29,180,0">
                    <StackPanel Name="MainPlace" Orientation="Vertical">
                
                    </StackPanel>
                </ScrollViewer>
        </StackPanel>
    </Viewbox>
</Window>
